<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rpgmanager.controllers.screens.RollHistoryController">
    <top>
        <ToolBar>
            <Label text="Historial de tiradas" style="-fx-font-weight: bold; -fx-font-size: 20px;" />
            <Button text="Refrescar" onAction="#refresh"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="rollsTable" prefHeight="500" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colCampaign" text="Campaña" prefWidth="100"/>
                    <TableColumn fx:id="colSession" text="Sesión" prefWidth="100"/>
                    <TableColumn fx:id="colCharacter" text="Personaje" prefWidth="100"/>
                    <TableColumn fx:id="colType" text="Comando" prefWidth="100"/>
                    <TableColumn fx:id="colDate" text="Fecha" prefWidth="100"/>
                    <TableColumn fx:id="colResult" text="Resultado" prefWidth="100"/>
                </columns>
            </TableView>

        </VBox>
    </center>
    <bottom>
        <VBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <Button text="TIRAR DADO" onAction="#onRollDice" />
        </VBox>
    </bottom>
</BorderPane>