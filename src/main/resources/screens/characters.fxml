<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.rpgmanager.controllers.CharactersController">

    <VBox>
        <padding>
            <Insets topRightBottomLeft="20"/>
        </padding>
        <Button text="Home" maxWidth="Infinity" onAction="#goToHome"/>
        <Button text="Bestiary" maxWidth="Infinity" onAction="#goToMonstersDatabase"/>
        <Button text="Characters" maxWidth="Infinity" />
        <Button text="Sessions" maxWidth="Infinity" />
        <Button text="Rolls" maxWidth="Infinity" />
        <Button text="Weaponry" maxWidth="Infinity" />
    </VBox>
    <BorderPane prefWidth="700">
        <top>
            <HBox spacing="10">
                <Label fx:id="campaignTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Region VBox.vgrow="ALWAYS" />
                <Button text="Add Character" onAction="#onAddCharacter" />
            </HBox>
        </top>

        <center>
            <VBox spacing="20">
                <ScrollPane fx:id="myScrollPane" prefWidth="400" prefHeight="600">
                    <padding>
                        <Insets topRightBottomLeft="10"/>
                    </padding>
                    <FlowPane fx:id="charactersContainer" hgap="15" vgap="15">
                    </FlowPane>
                </ScrollPane>
            </VBox>
        </center>
    </BorderPane>
</HBox>